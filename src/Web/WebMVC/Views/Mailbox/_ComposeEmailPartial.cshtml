@{
    Layout = "~/Views/Mailbox/_MailLayout.cshtml";
}

@model ComposeEmailViewModel

<div class="mail-box-header">
    <div class="float-right tooltip-demo">
        <a href="@Url.Action("Inbox", "Mailbox")" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="Discard email"><i class="fa fa-times"></i> Discard</a>
    </div>
    <h2>
        Compose mail
    </h2>
</div>
<div class="mail-box">
    <form method="post" role="form" asp-controller="MailBox" asp-action="SendEmail">
        <div class="mail-body">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">To:</label>
                <div class="col-sm-10">
                    <select asp-for="@Model.RecipientPartyIds" asp-items="@Model.SubscribersList" class="form-control subscriberSelect" multiple="multiple"></select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Subject:</label>
                <div class="col-sm-10">
                    <input asp-for="Subject" type="text" placeholder="Subject" class="form-control" />
                </div>
            </div>
        </div>
        <div class="mail-text h-200">
            <textarea asp-for="Body" rows="10"></textarea>
            <div class="clearfix"></div>
        </div>
        <div class="mail-body text-right tooltip-demo">
            <button type="submit" class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="top" title="Send">
                <i class="fa fa-reply"></i> Send
            </button>
            <a href="@Url.Action("Inbox", "Mailbox")" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Discard email"><i class="fa fa-times"></i> Discard</a>
        </div>
    </form>
    <div class="clearfix"></div>
</div>