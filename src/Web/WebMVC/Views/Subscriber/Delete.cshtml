@model Subscribing.Application.Queries.ViewModels.SubscriberViewModel

@{
    ViewData["Title"] = "Delete Subscriber";
    var headerList = new List<Header>() {
        new Header() { Controller = "Home", Text = "Back to Home" },
        new Header() { Text = " / " },
        new Header() { Controller = "Subscriber", Text = "Subscriber" } };
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Delete Subscriber</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a class="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Settings</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Delete Subscriber</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Subscriber Details</h5>
                </div>
                <div class="ibox-content">
                    <form method="post" role="form" asp-controller="Subscriber" asp-action="Delete">
                        <h4 class="text-danger">Are you sure you want to delete this?</h4>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.SubscriberPartyId)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Email)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                        </dl>
                        <button class="btn btn-danger" type="submit" asp-route-id="@Model.SubscriberPartyId">Delete</button>
                        <a class="btn btn-white" asp-controller="Subscriber" asp-action="Index">Back To List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>